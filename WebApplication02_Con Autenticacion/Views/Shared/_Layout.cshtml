@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Proyecto VERIS</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/styles.css" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- FORZAR FOOTER AL FONDO -->
    <style>
        html {
            height: 100%;
        }

        body {
            display: flex !important;
            flex-direction: column !important;
            min-height: 100vh !important;
            margin: 0 !important;
        }

        .container.body-content {
            flex: 1 0 auto !important;
        }

        .footer-veris {
            flex-shrink: 0 !important;
            margin-top: auto !important;
        }
    </style>
</head>
<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-2">
        <div class="container-fluid px-4">
            <!-- LOGO -->
            <a class="navbar-brand d-flex flex-column align-items-start" href="@Url.Action("Index", "Home")">
                <img src="~/Imagenes/Logo/logo.png" alt="Logo Veris" class="img-fluid mb-1" style="height: 35px; width: 100%;">
                <span class="slogan">Hacemos <strong>fácil cuidarte</strong></span>
            </a>

            <!-- Botón hamburguesa -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menuPrincipal"
                    aria-controls="menuPrincipal" aria-expanded="false" aria-label="Alternar navegación">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- MENÚ -->
            <div class="collapse navbar-collapse justify-content-between" id="menuPrincipal">
                <ul class="navbar-nav flex-grow-1 justify-content-evenly text-center">

                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("SuperAdmin"))
                        {
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Paciente")"><i class="bi bi-people-fill me-1"></i>Pacientes</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Medico")"><i class="bi bi-person-badge-fill me-1"></i>Médicos</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Especialidad")"><i class="bi bi-heart-pulse me-1"></i>Especialidades</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Medicamento")"><i class="bi bi-capsule me-1"></i>Medicamentos</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Consulta")"><i class="bi bi-clipboard2-pulse me-1"></i>Consultas</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Receta")"><i class="bi bi-receipt me-1"></i>Recetas</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Rol")"><i class="bi bi-shield-lock-fill me-1"></i>Gestión de Roles</a></li>
                        }
                        else if (User.IsInRole("Administrador"))
                        {
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Paciente")"><i class="bi bi-people-fill me-1"></i>Pacientes</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Medico")"><i class="bi bi-person-badge-fill me-1"></i>Médicos</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Especialidad")"><i class="bi bi-heart-pulse me-1"></i>Especialidades</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Medicamento")"><i class="bi bi-capsule me-1"></i>Medicamentos</a></li>
                        }
                        else if (User.IsInRole("Medico"))
                        {
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Consulta")"><i class="bi bi-clipboard2-pulse me-1"></i>Consultas</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Receta")"><i class="bi bi-receipt me-1"></i>Recetas</a></li>
                        }
                        else if (User.IsInRole("Paciente"))
                        {
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Paciente")"><i class="bi bi-person-circle me-1"></i>Mis Datos</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("CitasPaciente", "Consulta")"><i class="bi bi-clipboard2-pulse me-1"></i>Mis Consultas</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("RecetasPaciente", "Receta")"><i class="bi bi-capsule-pill me-1"></i>Mis Recetas</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Agendar", "Consulta")"><i class="bi bi-calendar-plus me-1"></i>Agendar Cita</a></li>
                        }
                    }
                    else
                    {
                        <!-- 🔹 Módulos visibles antes de iniciar sesión -->
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Login", "Account", new { modulo = "Medico" })"><i class="bi bi-person-badge me-1"></i>Médicos</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Login", "Account", new { modulo = "Paciente" })"><i class="bi bi-people me-1"></i>Pacientes</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Login", "Account", new { modulo = "Administrador" })"><i class="bi bi-shield-lock me-1"></i>Administrador</a></li>
                    }

                </ul>

                <!-- Sección de Login / Logout -->
                <div class="d-flex flex-wrap justify-content-center justify-content-lg-end mt-2 mt-lg-0">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </nav>

    <!-- CONTENIDO PRINCIPAL -->
    <div class="container body-content mt-4">
        @RenderBody()
        <hr />
    </div>

    <!-- FOOTER VERIS -->
    <footer class="footer-veris">
        @if (User.IsInRole("SuperAdmin"))
        {
            <!-- Footer para SUPERADMIN -->
            <div class="footer-bottom text-center text-white py-3 bg-dark">
                <div class="d-flex flex-column flex-md-row justify-content-center align-items-center gap-2">
                    <div class="d-flex align-items-center gap-2">
                        <i class="bi bi-shield-check-fill text-danger" style="font-size: 1.2rem;"></i>
                        <span class="badge bg-danger">Modo SuperAdministrador</span>
                    </div>
                    <span class="d-none d-md-inline mx-2">|</span>
                    <small>© @DateTime.Now.Year - Proyecto VERIS</small>
                </div>
            </div>
        }
        else if (User.IsInRole("Administrador"))
        {
            <!-- Footer para ADMINISTRADOR -->
            <div class="footer-bottom text-center text-white py-3 bg-dark">
                <div class="d-flex flex-column flex-md-row justify-content-center align-items-center gap-2">
                    <div class="d-flex align-items-center gap-2">
                        <i class="bi bi-shield-lock-fill text-warning" style="font-size: 1.2rem;"></i>
                        <span class="badge bg-warning text-dark">Modo Administrador</span>
                    </div>
                    <span class="d-none d-md-inline mx-2">|</span>
                    <small>© @DateTime.Now.Year - Proyecto VERIS</small>
                </div>
            </div>
        }
        else if (User.IsInRole("Medico"))
        {
            <!-- Footer para MEDICO -->
            <div class="footer-bottom text-center text-white py-3 bg-dark">
                <div class="d-flex flex-column flex-md-row justify-content-center align-items-center gap-2">
                    <div class="d-flex align-items-center gap-2">
                        <i class="bi bi-person-badge-fill text-info" style="font-size: 1.2rem;"></i>
                        <span class="badge bg-info text-dark">Modo Médico</span>
                    </div>
                    <span class="d-none d-md-inline mx-2">|</span>
                    <small>© @DateTime.Now.Year - Proyecto VERIS</small>
                </div>
            </div>
        }
        else if (User.IsInRole("Paciente") || !User.Identity.IsAuthenticated)
        {
            <!-- Footer para PACIENTES y usuarios NO autenticados -->
            <div class="footer-top text-center text-white py-3 bg-primary">
                <h6 class="mb-2">Encuentra nuestras redes sociales</h6>
                <div class="d-flex justify-content-center gap-3">
                    <a href="#" class="social-icon text-white" title="WhatsApp"><i class="bi bi-whatsapp"></i></a>
                    <a href="#" class="social-icon text-white" title="Facebook"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="social-icon text-white" title="Instagram"><i class="bi bi-instagram"></i></a>
                    <a href="#" class="social-icon text-white" title="Twitter"><i class="bi bi-twitter"></i></a>
                    <a href="#" class="social-icon text-white" title="YouTube"><i class="bi bi-youtube"></i></a>
                </div>
            </div>
            <div class="footer-bottom text-center text-white py-3 bg-dark">
                © @DateTime.Now.Year - Proyecto VERIS - Hacemos fácil cuidarte
            </div>
        }
    </footer>

    <!-- Bootstrap JS -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>